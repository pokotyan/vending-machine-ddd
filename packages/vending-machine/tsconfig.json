{
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
  ],
  "compilerOptions": {
    "outDir": "lib",
    "target": "es5",
    "module": "commonjs",
    "lib": ["es5", "es6", "dom"], // typescriptでconsole.logしたいならdomがいる。
    "types": ["reflect-metadata"],
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true
  }
}