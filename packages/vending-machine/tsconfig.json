{
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
  ],
  "compilerOptions": {
    "outDir": "lib",
    "target": "es5",
    "module": "commonjs",
    "lib": ["es5", "es6", "es7", "dom"], // typescriptでconsole.logしたいならdomがいる。stringの配列でincludesする場合es7がいる
    "types": ["reflect-metadata"],
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "declaration": true // 型定義ファイルのindex.d.tsを作ってくれる
  }
}